<div class="login-form gray-panel d-flex justify-content-center">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <h2 class="text-center text-success">Please sign in</h2>
    <hr>

    <div class="field mb-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field mb-3">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field mb-2">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="d-flex justify-content-center">
      <%= f.submit "Sign in", :class => "btn btn-success btn-sm" %>

      <% if resource.class.to_s == "Customer" %>
        <%= link_to "Sign up", new_customer_registration_path, :class => "ml-3"%>
      <% end %>
    </div>
  <% end %>
</div>
