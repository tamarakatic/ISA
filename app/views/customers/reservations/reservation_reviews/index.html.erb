<div style='background: transparent !important;' class='jumbotron'>
  <% if @waiters.empty? and @foods.empty? and @drinks.empty? %>
    <h3><i>No finished orders yet</i></h3>
  <% else %>
  <h3><i>Review this visit</i></h3>
  <hr>
  <div>
    <span>Restaurant:</span>
    <span><%= @reservation.restaurant.title %> </span> <br/>
    <input type="hidden" id="restaurantId" value=<%=@reservation.restaurant.id %> />
    <input type="hidden" id="reservationId" value=<%=@reservation.id %> />
    <% if @restHelper == false %>
      <button type="button" id='restaurantReview' class="btn btn-info btn-sm">Review restaurant</button>
      <select id="restaurantCombo">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
        <option>6</option>
        <option>7</option>
        <option>8</option>
        <option>9</option>
        <option>10</option>
      </select>
    <% else %>
      <br/>
      <span><i>Already reviewed</i></span>
    <% end %>
  </div>
  <hr>
  <div>
    <span>Waiters:</span>
      <ul>
        <% @waiters.each do |waiter| %>
         <li>
           <input type="hidden" id="waiter" value=<%=waiter.id %> />
           <span><%=waiter.firstname%></span>
           <span><%=waiter.lastname%></span>
           <button type="button" id='waiterReview' class="btn btn-info btn-sm">Review waiter</button>
           <select id="waiterCombo">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
            <option>10</option>
           </select>
         </li>
        <% end %>
      </ul>
    <br/>
  </div>
  <hr>
  <div>
    <span>Foods:</span>
      <ul>
        <% @foods.each do |food| %>
         <li>
           <input type="hidden" id="food" value=<%=food.id %> /> <span><%=food.name%></span>
         </li>
        <% end %>
      </ul>
    <br/>
    <% if @foodHelper == false %>
      <button type="button" id='foodReview' class="btn btn-info btn-sm">Review food</button>
      <select id="foodsCombo">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
        <option>6</option>
        <option>7</option>
        <option>8</option>
        <option>9</option>
        <option>10</option>
      </select>
    <% else %>
      <br/>
      <span><i>Already reviewed</i></span>
    <% end %>
  </div>
  <hr>
  <div>
    <span>Drinks:</span>
      <ul>
        <% @drinks.each do |drink| %>
         <li>
           <input type="hidden" id="drink" value=<%=drink.id %> /> <span><%=drink.name%></span>
         </li>
        <% end %>
      </ul>
    <br/>
    <% if @drinkHelper == false %>
      <button type="button" id='drinkReview' class="btn btn-info btn-sm">Review drink</button>
      <select id="drinksCombo">
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
        <option>6</option>
        <option>7</option>
        <option>8</option>
        <option>9</option>
        <option>10</option>
      </select>
    <% else %>
      <br/>
      <span><i>Already reviewed</i></span>
    <% end %>
  </div>
  <% end %>
</div>