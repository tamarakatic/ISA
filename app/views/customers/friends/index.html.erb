<div class="column container-fluid">
  <div class="alert alert-success">
    <h1 class="text-center"><%= fa_icon "users", :text => "Friends", :class => "fa-fw" %>
  </h1>
  </div>
  <div class="card">
    <div class="card-header">
      <ul class="nav nav-tabs card-header-tabs">
        <li class="nav-item">
          <a class="nav-link active" href="#">Active</a>
        </li>
        <li class="nav-item">
        </li>
      </ul>
    </div>
    <div class="card-block">
      <div class="container-fluid">
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="text" placeholder="Search">
          <button class="btn btn-success my-2 my-sm-0" type="submit"><%= fa_icon "search" %></button>

          <div style="width: 1rem">
            &nbsp
          </div>

            <%= link_to root_path, :class => "btn btn-success pull-right" do %>
              <%= fa_icon "user-plus", :text => "Find friends", :class => "fa-sm" %>
            <% end %>
        </form>

        &nbsp
      </div>

      <div class="card-deck">
        <% @friends.each do |friend| %>
            <div class="card">
              <div class="card-block">
                <h4 class="text-center"><%= "#{friend.firstname} #{friend.lastname}" %></h4>
                <p class="text-primary"><%= "#{friend.email}" %></p>
                <%= link_to root_path, :method => :delete, :class => "btn btn-danger pull-right" do %>
                  <%= fa_icon "user-times red", :text => "Remove", :class => "fa-sm fa-fw" %>
                <% end %>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>

