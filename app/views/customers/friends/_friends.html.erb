<% if @friends.empty? %>
  <div class="alert alert-info text-center w-100" role="alert">
    <strong>Hello!</strong> You do not have any friend yet.
  </div>
<% else %>
  <%= render :partial => "friend",
             :collection => @friends,
             :as => :friend,
             :layout => false,
             :locals => { :buttons => "remove" }
  %>
<% end %>
