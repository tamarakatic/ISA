<div class="card" id="<%= friend.id %>">
  <div class="card-block">
    <h4 class="text-center"><%= "#{friend.firstname} #{friend.lastname}" %></h4>
    <p class="text-primary"><%= "#{friend.email}" %></p>
    <%= link_to remove_friend_path(:friend_id => friend.id), :remote => true, :method => :delete, :class => "btn btn-danger pull-right" do %>
      <%= fa_icon "user-times", :text => "Remove", :class => "fa-sm fa-fw" %>
    <% end %>
  </div>
</div>
