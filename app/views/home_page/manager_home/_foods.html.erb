<h2>Food menu   <%= link_to 'Add', new_food_path(current_manager.restaurant), class: "btn btn-danger btn-sm", method: :get %></h2>
<ul>
  <% current_manager.restaurant.foods.each do |food| %>
    <li>
        <%= food.name %>
        <%= link_to 'Edit', edit_food_path(food), class: 'btn btn-warning btn-sm', method: :get %>
    </li>
    <% end %>
</ul>
