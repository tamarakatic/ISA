<table class="table">
  <thead>
    <tr>
      <th>Item</th>
      <th>Quantity</th>
      <th>Unit</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% offer.offer_items.each do |item| %>
      <td>
        <%= item.order_item.item %>
      </td>
      <td>
        <%= item.order_item.quantity %>
      </td>
      <td>
        <%= item.order_item.unit_of_measure %>
      </td>
      <td>
        <%= number_field_tag :price, offer_item_price(item.price), :readonly => true %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
