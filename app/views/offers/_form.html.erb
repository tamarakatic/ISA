<%= form_tag "/offers", :id => 'form' do %>
<h3>Item offers</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Item</th>
        <th>Quantity</th>
        <th>Unit</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @order_items.each do |item| %>
          <tr>
            <td>
              <%= item.item %>
            </td>
            <td>
              <%= item.quantity%>
            </td>
            <td>
              <%= item.unit_of_measure %>
            </td>
            <td>
              <%= text_field_tag item.id, offer_price(item.id) %>
            </td>
            <td>
              <div class="actions">
                <%= button_tag button_change(item.id), :name => "item_id", :value => item.id %>
              </div>
            </td>
          </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
