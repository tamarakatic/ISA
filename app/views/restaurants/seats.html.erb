<br /><br />
<ul>
  <% current_manager.restaurant.seats.each do |seat| %>
  <div class="container">
    <li>
      <div class="row">
        <div class="col-sm-12">
          <%= seat.area %>
          <div class="row">
          <% seat.number_of_seats.sort{ |a,b| a.number<=>b.number }.each do |num_seat| %>
            &nbsp;<div class="col-xs-2 col-xs-2">
              <button type="button" id="ts" class="btn btn-sm"><i class="fa fa-square fa-lg fa-fw"></i>Table:<%= "#{num_seat.number}" %>Seats:<%= "#{num_seat.seatstable}" %></button>
            </div>&nbsp;&nbsp;&nbsp;
          <% end %>
          </div>
        </div>
      </div>
      <%= link_to "+ Table", new_number_of_seat_path(:seat_id => seat.id), class: "btn btn-primary btn-sm", method: :get%>
      <%= link_to 'Edit', edit_seat_path(seat), class: 'btn btn-success btn-sm', method: :get %>
      <%= link_to 'Destroy', seat, class: 'btn btn-danger btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  </div>
  <% end %>
</ul>

<%= button_to edit_restaurant_path(current_manager.restaurant), :class => "btn btn-lg", method: :get do %>
<%= fa_icon "arrow-left", :class => "fa-lg fa-fw" %>
<% end %>
